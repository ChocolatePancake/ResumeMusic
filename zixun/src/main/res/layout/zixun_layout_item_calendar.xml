<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_94"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/calendar_item_time_text"
        android:layout_width="@dimen/dp_78"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/sp_12" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calendar_item_city_text"
                android:layout_width="@dimen/dp_65"
                android:layout_height="wrap_content" />

            <RatingBar
                android:id="@+id/calendar_item_rating_bar"
                style="@style/starRatingBar"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_13"
                android:isIndicator="false" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/calendar_item_importance_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_18"
                android:padding="@dimen/dp_1">

                <TextView
                    android:id="@+id/calendar_item_importance_text"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_21"
                    android:background="@android:color/white"
                    android:gravity="center" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/calendar_item_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#525252"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calendar_item_previous_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/calendar_item_forecast_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/calendar_item_reality_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>