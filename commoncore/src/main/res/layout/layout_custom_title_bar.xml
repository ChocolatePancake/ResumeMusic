<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_custom_title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_64"
    android:background="@drawable/bg_title_gradient"
    android:fitsSystemWindows="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <Space
            android:layout_width="@dimen/dp_18"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="@dimen/dp_18"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="首页"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/title_bar_search_image"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@drawable/ic_custom_title_bar_search" />

        <ImageView
            android:id="@+id/title_bar_server_image"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/ic_custom_title_bar_server" />

    </LinearLayout>

</LinearLayout>