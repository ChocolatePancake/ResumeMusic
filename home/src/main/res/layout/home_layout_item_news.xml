<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_81"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_30"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_30"
    android:paddingBottom="@dimen/dp_9">

    <ImageView
        android:id="@+id/home_news_item_image"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_61"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_news_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_news_item_more"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_15"
                android:textColor="#FF999999"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/home_news_item_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:layout_weight="1"
                android:textColor="#FF999999"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/home_news_item_collection"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:drawableLeft="@mipmap/ic_select_nor"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="#FF999999"
                android:textSize="@dimen/sp_11"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_news_item_like"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_8"
                android:drawableLeft="@drawable/icon_un_like"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="#FF999999"
                android:textSize="@dimen/sp_11" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>