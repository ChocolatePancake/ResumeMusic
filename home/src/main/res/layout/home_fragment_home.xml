<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar_headFastLib">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_166"
                android:scaleType="fitXY"
                android:src="@mipmap/home_icon_banner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

                <ImageView
                    android:id="@+id/to_novice_school_image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_80"
                    android:layout_weight="1"
                    android:src="@mipmap/home_icon_novice_school" />

                <ImageView
                    android:id="@+id/to_video_guile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_weight="1"
                    android:src="@mipmap/home_icon_video_guile" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_17"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/home_icon_market_title"
                        android:drawablePadding="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:text="最新行情"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/market_check_more_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/back_white"
                        android:gravity="center"
                        android:text="查看更多"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/sp_11" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/default_divider" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_market_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_17"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/home_icon_circle_title"
                        android:drawablePadding="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:text="最新行情"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/circle_check_more_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/back_white"
                        android:gravity="center"
                        android:text="查看更多"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/sp_11" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/default_divider" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_circle_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_17"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/home_icon_news_title"
                        android:drawablePadding="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:text="实事新闻"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/news_check_more_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/back_white"
                        android:gravity="center"
                        android:text="查看更多"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/sp_11" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@drawable/default_divider" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_news_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/layout_custom_title_bar" />

</FrameLayout>
