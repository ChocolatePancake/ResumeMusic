<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".activity.SettingsActivity"
    tools:ignore="ResourceName">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:id="@+id/setting_menu_push"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="推送设置"
            android:textColor="#FF373737"
            android:textSize="15dp" />

        <Switch
            android:id="@+id/push_massage_switch"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_21" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_menu_clear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清理缓存"
            android:textColor="#FF373737"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_21"
            android:src="@drawable/my_icon_clear_up" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_menu_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="密码设置"
            android:textColor="#FF373737"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_21"
            android:src="@drawable/my_icon_right_arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_menu_check_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="检查更新"
            android:textColor="#FF373737"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_21"
            android:src="@drawable/my_icon_right_arrow" />

    </LinearLayout>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_18"
        android:background="@drawable/my_bg_content_default_round_5"
        android:text="退出登录"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/sp_15" />

</LinearLayout>