<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_custom_title_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_263"
            android:scaleType="fitXY"
            android:src="@mipmap/my_icon_bg_top" />

        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:singleLine="true"
                android:text="立即登录"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_158"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/my_bg_personal_setting"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/settings_collection_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_41"
                    android:drawableLeft="@mipmap/my_icon_collection"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="我的收藏"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_30"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/settings_like_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_41"
                    android:drawableLeft="@mipmap/my_icon_like"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="我的点赞"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/default_divider" />

            <cn.control.c.com.ccontrol.FunctionOption
                android:id="@+id/persona_item_massage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:leftIcon="@drawable/my_icon_settings_massage"
                app:message="消息中心"
                app:rightIcon="@drawable/my_icon_right_arrow" />

            <cn.control.c.com.ccontrol.FunctionOption
                android:id="@+id/persona_item_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:leftIcon="@drawable/my_icon_personal_msg"
                app:message="个人资料"
                app:rightIcon="@drawable/my_icon_right_arrow" />

            <cn.control.c.com.ccontrol.FunctionOption
                android:id="@+id/persona_item_idea"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:leftIcon="@drawable/my_icon_settings_idea"
                app:message="意见反馈"
                app:rightIcon="@drawable/my_icon_right_arrow" />

            <cn.control.c.com.ccontrol.FunctionOption
                android:id="@+id/persona_item_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:leftIcon="@drawable/my_icon_settings_setting"
                app:message="设置"
                app:rightIcon="@drawable/my_icon_right_arrow" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
