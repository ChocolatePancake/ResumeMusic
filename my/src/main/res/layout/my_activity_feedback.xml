<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF8F8F8"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@android:color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_188"
                android:background="@null"
                android:gravity="top|left"
                android:hint="期待您的建议与意见,我们会认真倾听每一条意见"
                android:lineSpacingMultiplier="1.3"
                android:maxLength="255"
                android:minHeight="@dimen/dp_128"
                android:padding="@dimen/dp_10"
                android:textColor="@color/text_content"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/text_count_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="@dimen/dp_15"
                android:textColor="#FF999999"
                android:textSize="@dimen/sp_11" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/et_feedback_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="您的联系方式(手机号/邮箱)"
                android:maxLength="20"
                android:paddingLeft="@dimen/dp_5"
                android:textColor="@color/text_content"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/my_bg_content_default_round_5"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

</LinearLayout>
