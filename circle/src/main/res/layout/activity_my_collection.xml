<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MyCollectionActivity"
    tools:ignore="ResourceName">

    <include layout="@layout/layout_title_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF8F8F8">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/circle_recommend_smart_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_collection_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15" />

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <TextView
            android:id="@+id/no_data_value"
            android:layout_width="@dimen/dp_190"
            android:layout_height="@dimen/dp_140"
            android:layout_gravity="center"
            android:background="@mipmap/icon_no_like_data"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/dp_16"
            android:text="您还没有收藏的文章哦～"
            android:textColor="#FF999999"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>