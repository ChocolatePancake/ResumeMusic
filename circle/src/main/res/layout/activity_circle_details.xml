<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CircleDetailsActivity"
    tools:ignore="ResourceName">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:id="@+id/community_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_weight="1"
        android:background="@drawable/circle_bg_find_fragment_content"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <ImageView
                android:id="@+id/circle_details_user_image"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/circle_details_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/dp_13" />

                <TextView
                    android:id="@+id/circle_details_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_48"
            android:paddingRight="@dimen/dp_48">

            <TextView
                android:id="@+id/circle_details_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF666666"
                android:textSize="@dimen/sp_13" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/circle_details_image_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/circle_details_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_un_collection"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/circle_details_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_comment"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/circle_details_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_un_like"
                    android:drawablePadding="@dimen/dp_5"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/sp_11" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="#FFF8F8F8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:text="发表评论"
            android:textColor="#FF333333" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/circle_details_commit_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF8F8F8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/circle_find_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@drawable/circle_bg_content_white_round_5"
            android:maxLength="200"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_6"
            android:singleLine="true"
            android:textColor="@color/text_title"
            android:textSize="@dimen/sp_13" />

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            app:rv_backgroundColor="#FFAB87FD"
            app:rv_radius="@dimen/dp_5" />

    </LinearLayout>

</LinearLayout>