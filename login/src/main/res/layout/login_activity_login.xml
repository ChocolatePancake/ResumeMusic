<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        style="@style/LoginInputLayoutStyle"
        android:paddingTop="@dimen/dp_160">

        <LinearLayout style="@style/LoginInputViewStyle">

            <TextView
                style="@style/LoginEditPromptTextStyle"
                android:text="手机号：" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/LoginEditTextStyle"
                android:hint="手机号码"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            style="@style/LoginInputViewStyle"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                style="@style/LoginEditPromptTextStyle"
                android:text="密 码：" />

            <EditText
                android:id="@+id/et_password"
                style="@style/LoginEditTextStyle"
                android:hint="登录密码"
                android:inputType="textPassword" />

            <ToggleButton
                android:id="@+id/tb_password_show"
                style="@style/LoginToggleButtonStyle" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_login"
            style="@style/LoginSubmitButtonStyle"
            android:layout_marginTop="@dimen/dp_50"
            android:text="登录" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_33"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textColor="#FF7B47F2"
                android:textSize="@dimen/sp_13" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_phone_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机验证码登录"
                android:textColor="#FF7B47F2"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_26"
            android:text="注册账号"
            android:textColor="#4d77ff"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

</LinearLayout>
