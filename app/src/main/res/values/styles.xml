<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ResumeEditMenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ResumeEditMenuPromptStyle">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/text_content</item>
    </style>

    <style name="ResumeEditMenuPromptMustStyle">
        <item name="android:drawableLeft">@drawable/icon_must_flag</item>
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/text_content</item>
    </style>

    <style name="ResumeEditMenuEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

</resources>
