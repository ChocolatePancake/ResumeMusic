<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/party_item_user_head"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/party_item_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00ADFF"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/party_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:orientation="vertical"
            android:padding="@dimen/dp_6">

            <TextView
                android:id="@+id/party_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/text_content"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/party_item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:textColor="@color/text_content"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/party_item_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/party_item_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/party_item_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp_11" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>