<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".featuresAct.RecordMusicActivity">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2C2F3D"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/record_music_pause"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_pause" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="暂停"
                    android:textColor="#e6e6e6"
                    android:textSize="@dimen/sp_11" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/record_music_complete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@drawable/icon_record_end" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/record_music_again"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_again" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="重录"
                    android:textColor="#e6e6e6"
                    android:textSize="@dimen/sp_11" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/record_music_start_tx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_title_gradient"
            android:gravity="center"
            android:text="开始"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

    </FrameLayout>

</LinearLayout>