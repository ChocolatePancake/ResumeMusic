<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_12"
    android:background="@drawable/bg_white_round_5"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_26"
        android:gravity="center_vertical"
        android:text="求职意向"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="职    位"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/edit_resume_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机开发工程师"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="工作地点"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/edit_resume_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="期望薪资"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/edit_resume_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000-20000"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="个人标签"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/edit_resume_job_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3年  android  java  MVC"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

</LinearLayout>