<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".featuresAct.EditPlanActivity">

    <include layout="@layout/layout_title_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_12">

            <EditText
                android:id="@+id/edit_plan_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="策划主题"
                android:textColor="@color/text_content"
                android:textSize="@dimen/sp_14" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_240"
                android:background="@drawable/bg_edit_content">

                <EditText
                    android:id="@+id/edit_plan_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="left|top"
                    android:hint="策划内容以及具体事项"
                    android:padding="@dimen/dp_8"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp_14" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <TextView
                    android:id="@+id/edit_plan_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="开始时间 :"
                    android:textColor="#3BA6FF"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/edit_plan_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="结束时间 :"
                    android:textColor="#3BA6FF"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <Button
                android:id="@+id/edit_plan_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_26"
                android:text="发布" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>