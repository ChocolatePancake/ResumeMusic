<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_round_5"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_26"
        android:gravity="center_vertical"
        android:text="基本信息"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_resume_head"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_48"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_resume_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="彭汪"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/edit_resume_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="男"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/edit_resume_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="25岁"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_resume_live_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海-浦东新区"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/edit_resume_job_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4年工作经验"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <TextView
                android:id="@+id/edit_resume_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18229828813"
                android:textColor="@color/text_content"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/edit_resume_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1929774468@qq.com"
                android:textColor="@color/text_content"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/edit_resume_job_stuart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目前正在找工作"
                android:textColor="@color/text_content"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>