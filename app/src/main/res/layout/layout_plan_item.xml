<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_12"
    android:background="@drawable/bg_white_round_5"
    android:orientation="horizontal"
    android:padding="@dimen/dp_12">

    <ImageView
        android:id="@+id/plan_item_user_head"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plan_item_user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/plan_item_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_28"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/plan_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plan_item_start_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/plan_item_end_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>